<Window x:Class="Animedia.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Animedia"
        mc:Ignorable="d"
        Title="User Login" Height="400" Width="350" WindowStartupLocation="CenterScreen"  
        KeyDown="Window_KeyDown" 
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Border CornerRadius="15">
        <!-- Фоновое изображение -->
        <Border.Background>
            <ImageBrush Opacity="0.5" ImageSource="/Images/back-image.jpg" Stretch="None"/>
        </Border.Background>
        <Grid>
            <!-- Основной контейнер с пульсирующей границей -->
            <Border CornerRadius="10" BorderThickness="3" Opacity="0.95" x:Name="PulsatingBorder">

                <!-- Градиентная граница -->
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="AntiqueWhite" Offset="0"/>
                        <GradientStop Color="Aqua" Offset="0.75"/>
                        <GradientStop Color="Green" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <!-- Фон контейнера -->
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Color="#005244" Offset="0"/>
                        <GradientStop Color="#050806" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <!-- Анимация пульсирующей границы -->
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Border.Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <!-- Анимация изменения толщины границы -->
                                <ThicknessAnimation
                                Storyboard.TargetProperty="BorderThickness"
                                From="2" To="4" Duration="0:0:1" AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
            </Border>

            <!-- Содержимое -->
            <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Top">
                <!-- Логин -->
                <TextBlock Text="Логин"
                           Foreground="DarkGray"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"                             
                           Margin="0,70,0,0"/>

                <TextBox x:Name="login_username"
                         FontSize="13"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                            
                         Foreground="White"
                         CaretBrush="LightGray"
                         BorderBrush="DarkGray"
                         BorderThickness="0,0,0,2"
                         Height="28"
                         VerticalContentAlignment="Center"
                         Margin="0,5,0,0"
                         Padding="20,0,0,0">
                    <TextBox.Background>
                        <ImageBrush ImageSource="/Images/user-icon.png"
                                    Stretch="None"
                                    AlignmentX="Left"/>
                    </TextBox.Background>
                </TextBox>

                <!-- Пароль -->
                <Border Background="White" CornerRadius="5" Padding="5" Margin="0,5">
                    <StackPanel Orientation="Horizontal">
                        <PasswordBox Width="200" BorderThickness="0" Background="Transparent"/>
                        <TextBlock Text="🔒" FontSize="14" VerticalAlignment="Center" Margin="5"/>
                    </StackPanel>
                </Border>


                <!-- Кнопка "Логин" -->
                <Button Content="LOGIN" Background="#2196F3" Foreground="White" FontWeight="Bold" Height="40" Click="login_btn_Click"/>

                <!-- Забыли пароль? -->
                <TextBlock Text="Forgot Password?" Foreground="LightGray" HorizontalAlignment="Center" Cursor="Hand" Margin="10" />
            </StackPanel>


        </Grid>
    </Border>
</Window>